include mixins/svg
include mixins/blocks
include template/header
include template/footer
include ../components/logo/logo

block vars
	-
		var title = title || ''
		var description = description || ''
		var image = image || ''
	-
		var html = {
			attrs: {
				lang: 'ru'
			},
			classList: []
		}
	-
		var body = {
			attrs: {},
			classList: []
		}
	-
		var meta = {
			charset: 'utf-8',
			description: description,
			keywords: [],
			ogTitle: title,
			viewport: 'width=device-width, initial-scale=1, maximum-scale=1, minimum-scale=1',
			XUACompatible: 'IE=edge'
		}
	-
		var headerType = headerType || ''
		var logoType = logoType || ''
		var mobileBurger = mobileBurger || ''
		var footerType = footerType || ''

doctype html
html(class=html.classList)&attributes(html.attrs)
	head
		block head-start
		block meta
			if meta.charset
				meta(charset=meta.charset)
			if meta.XUACompatible
				meta(http-equiv="X-UA-Compatible" content=meta.XUACompatible)
			if meta.viewport
				meta(name="viewport" content=meta.viewport)
			if meta.description
				meta(name="description" content=meta.description)
		title
			= title
		block links
			link(rel="icon" href='')
			link(rel="icon" href='' sizes="16x16")
			link(rel="stylesheet" href="css/main.css")
		block head-end
	body(class=body.classList)&attributes(body.attrs)
		.page.js-page
			block header
				+header(
					{
						headerType: headerType,
						logoType: logoType,
						mobileBurger: mobileBurger
					}
				)
			main.main#main
				block content
			block footer 
				+footer({
					footerType: footerType
				})
		block scripts
			script(src="js/vendor.js")
			script(src="js/main.js")
		block body-end
